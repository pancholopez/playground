@page
@model UserProfileModel
@{
    ViewData["Title"] = "User Profile 🔎";
}
<p>
    <h3>User Profile</h3>
</p>
<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="ViewModel.Email"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="ViewModel.Email" class="form-control" readonly/>
            </div>
            <span class="text-danger" asp-validation-for="ViewModel.Email"></span>
        </div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="ViewModel.Department"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="ViewModel.Department" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="ViewModel.Department"></span>
        </div>

        <div class="row form-group">
            <div class="col-2">
                <label asp-for="ViewModel.Position"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="ViewModel.Position" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="ViewModel.Position"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Save" />
            </div>
            <div class="col">
            </div>
        </div>
    </form>
</div>
@if (!string.IsNullOrWhiteSpace(Model.SuccessMessage))
{
    <div class="alert alert-success" role="alert">
        @Model.SuccessMessage
    </div>
}