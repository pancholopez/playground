@page
@model Auth.Playground.AspIdentityApp.Pages.Account.PasswordReset

@{
    ViewData["Title"] = "Password Reset 🔑";
}
<p>
    <h3>Password Reset</h3>
</p>
<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="ViewModel.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="ViewModel.Password" class="form-control"/>
            </div>
            <span class="text-danger" asp-validation-for="ViewModel.Password"></span>
        </div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="ViewModel.ConfirmPassword"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="ViewModel.ConfirmPassword" class="form-control"/>
            </div>
            <span class="text-danger" asp-validation-for="ViewModel.ConfirmPassword"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Reset Password"/>
            </div>
            <div class="col">
                <input type="hidden" asp-for="ViewModel.Token" />
                <input type="hidden" asp-for="ViewModel.UserId" />
            </div>
        </div>
    </form>
</div>