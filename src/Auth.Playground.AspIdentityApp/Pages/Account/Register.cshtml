@page
@model RegisterModel
@{
    ViewData["Title"] = "User Registration 👤";
}
<p>
    <h3>User Registration</h3>
</p>
<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="ViewModel.Email"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="ViewModel.Email" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="ViewModel.Email"></span>
        </div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="ViewModel.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="ViewModel.Password" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="ViewModel.Password"></span>
        </div>
        
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="ViewModel.Department"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="ViewModel.Department" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="ViewModel.Department"></span>
        </div>
        
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="ViewModel.Position"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="ViewModel.Position" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="ViewModel.Position"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Register" />
            </div>
            <div class="col">
            </div>
        </div>
    </form>
</div>