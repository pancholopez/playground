@page
@model LoginTwoFactor

@{
    ViewData["Title"] = "User Login 2FA 🔑";
}
<p>
    <h3>Please enter the code from your email</h3>
</p>
<div class="container border" style="padding: 20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="input-group row">
            <div class="col-2">
                <label asp-for="ViewModel.SecurityCode"></label>
            </div>
            <div class="col">
                <input type="text" asp-for="ViewModel.SecurityCode" class="form-control" autocomplete="false"/>
            </div>
            <span class="text-danger" asp-validation-for="ViewModel.SecurityCode"></span>
        </div>
        <div class="input-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Verify"/>
            </div>
            <div class="col">
                <input type="hidden" asp-for="ViewModel.RememberMe"/>
            </div>
        </div>
    </form>
</div>